{
    "train_batch_size": 128,
    "gradient_accumulation_steps": 1,
    "fp16": {
        "enabled": true
    },
    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 5e-4,
            "weight_decay": 3e-7
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 1e-6,
            "warmup_max_lr": 3e-4,
            "warmup_num_steps": 200
        }
    },
    "zero_optimization": {
        "stage": 1
    },
    "wall_clock_breakdown": true
}