{
    "train_batch_size": 128,
    "train_micro_batch_size_per_gpu": 4,
    "bf16": {
        "enabled": true
    },
    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 5e-5,
            "weight_decay": 1e-4
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 1e-6,
            "warmup_max_lr": 3e-4,
            "warmup_num_steps": 1000
        }
    },
    "zero_optimization": {
        "stage": 2
    },
    "wall_clock_breakdown": true
}